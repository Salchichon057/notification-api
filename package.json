{
  "name": "comaslimpio-notification-api",
  "version": "1.0.0",
  "description": "API TypeScript para reemplazar la funci√≥n notifyCitizensWhenTruckIsNear de Firebase Functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm install --production=false && tsc -p tsconfig.build.json",
    "build:clean": "npm run clean && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "start:dev": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:prod": "cross-env NODE_ENV=production ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "@types/node": "^20.19.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
